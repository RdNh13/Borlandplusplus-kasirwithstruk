#menginput jumlah baris yang ingin disusun menjadi segitiga
baris = int (input("Masukkan jumlah baris : "))

#memusatkan angka agar tetap terisi ke pusat atau ke tengah segitiga
spasi = (2 * int(baris)) - 2

#membuat jumlah baris yang mulai dari nol
for i in range(0, baris):
    #membuat kolom yang jumlahnya sama dengan baris
    for j in range(0, spasi):
        print(end = " ")
    #membuat satu spasi dari jumlah baris
    spasi -= 1
    #membuat i + 1 agar angka yang keluar tepat sama dengan input 
    #karena range membuat angka berkurang 1
    for j in range (0, i + 1):
        print(j + 1, end = " ")
    print()
